	jsr get_filename_char	; get second another char
	bcs 90$
	cpy #':			; if colon
	beq ucolon_command	;	do ucolon
	cpy #'J			; if	j
	beq uj_command		;	go do dat uj command stuff..
	cpy #'I			; if	i
	beq ui_command		;	do ui command stuff
	cpy #'0			; if 	not zero
	bne 90$				puke
	jsr get_filename_char	; get more
	bcs 90$
	cpy #'>			; if	not >
	bne 90$				puke
	clc
	.byte $24
90$	sec
; rem
