;
30$	tay			save free bytes in .y
	ldi cleanup_command_write
	std cleanup_vector	set up cleanup vector
;				set up dma disk address
	ldi command-swapped_code_start
	clc
	adc command_len
	bcc 40$
	inx
40$	std dma_disk_addr
