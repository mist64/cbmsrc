	.subttl	"DIRECTORY OPERATIONS
;************************************************************************
;		DIRECTORY OPERATIONS
;************************************************************************
;
;		find_a_file_for_open
;		find_nth_matching_file
;
	ram filename,17
	ram file_type
	ram parse_access,1
	ram type_char,1
	ram wild_char,1
	ram replace_flag,1
	.ifdef rel_flag
	ram parse_record_len,1
	.endif
	ram found_flag,1
;
;
;
find_a_file
;
	jsr select_dir_channel
	ldd first_block
;
10$	std current_block
	cpd disk_end
	bcc 20$
	beq 15$
	lda #dos_confused
	.byte $2c
15$	lda #file_not_found
90$	sec
	rts
;
20$	jsr access_current_block
	bcs 90$
	jsr compare_filenames
	bcs 30$
	ldd current_block
	rts
;
30$	ldd dir_filelen
	sec
	addc current_block
	jmp 10$
;
find_open_file
	jsr select_dir_channel
	ldd first_block
10$	std current_block
	cpd disk_end
	bcc 20$
	beq 15$
	lda #dos_confused
	.byte $2c
15$	lda #file_not_found
90$	sec
	rts
;
20$	jsr access_current_block
	lda dir_access
	beq 30$
	ldd current_block
	clc
	rts
;
30$	ldd dir_filelen
	sec
	addc current_block
	jmp 10$
;
compare_filenames
	ldx #$ff
10$	inx
	lda dir_filename,x
	bne 20$
	lda filename,x
	beq 80$
	cmp #'*
	bne 90$
80$	clc
	rts
;
20$	lda filename,x
	beq 90$
	cmp dir_filename,x
	beq 10$
	cmp #'?
	beq 10$
	cmp #'*
	beq 80$
90$	sec
	rts
;
